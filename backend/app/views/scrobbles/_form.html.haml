= form_for @scrobble do |f|
  - if @scrobble.errors.any?
    #error_explanation
      %h2= "#{pluralize(@scrobble.errors.count, "error")} prohibited this scrobble from being saved:"
      %ul
        - @scrobble.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.select(:user_id, User.all.collect {|p| [ p, p.id ] })
  .field
    = f.label :episode
    = f.select(:episode_id, Episode.all.collect {|p| [ p, p.id ] })
  .actions
    = f.submit 'Save'
